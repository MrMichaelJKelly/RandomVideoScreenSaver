<UserControl x:Class="VideoScreensaver.PropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="135" Width="294">
    <Grid HorizontalAlignment="Stretch" Background="Gold" VerticalAlignment="Center">
        <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="5">
            <TextBlock Name="Path" FontSize="20" />
            <TextBlock Name="TimeTaken" FontSize="20" />
            <TextBlock Name="Title" FontSize="20" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Copy" HorizontalAlignment="Left" Click="Copy_Click" Margin="10" />
                <Button Content="Close" HorizontalAlignment="Right" IsCancel="True" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
